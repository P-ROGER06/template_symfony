{% extends 'base.html.twig' %}

{% block title %}Photography{% endblock %}

{% block body %}
    <h1>Photography</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ photography.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ photography.name }}</td>
            </tr>
            <tr>
                <th>Media</th>
                <td>{{ photography.media }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ photography.createdAt ? photography.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ photography.updatedAt ? photography.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ photography.date ? photography.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('photography_index') }}">back to list</a>

    <a href="{{ path('photography_edit', {'id': photography.id}) }}">edit</a>

    {{ include('photography/_delete_form.html.twig') }}
{% endblock %}
